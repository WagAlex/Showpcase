<h1>Editing shop</h1>

<%= form_for(@shop, html: { :multipart => true }, remote: true) do |f|  %>

  <div class= "form-description col-xs-12 col-sm-4 col-md-3">
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control", placeholder: "Name"%>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control", placeholder: "Please describe the shop here" %>
    </div>
    <div class="form-group">
      <%= f.label :price %> ($/month)<br>
      <%= f.number_field :price, class: "form-control", placeholder: "ex: 1499" %>
    </div>
    <div class="form-group fileUpload btn btn-info">
      <i class="fa fa-upload"></i> Upload
      <%= f.file_field :file, class: "upload" %>
    </div>
  </div>
  <div class= "form-address col-xs-12 col-sm-4 col-md-3">
    <div class="form-group">
      <%= f.label :street_address %><br>
      <%= f.text_field :street_address, class: "form-control", placeholder: "ex: 1 rue de l'hotel de ville" %>
    </div>
    <div class="form-group">
      <%= f.label :zipcode %><br>
      <%= f.text_field :zipcode, class: "form-control", placeholder: "ex: 75017" %>
    </div>
    <div class="form-group">
      <%= f.label :city %><br>
      <%= f.text_field :city, class: "form-control", placeholder: "ex: Paris" %>
    </div>
    <div class="form-group">
      <%= f.label :country %><br>
      <%= f.text_field :country, class: "form-control", placeholder: "ex: France" %>
    </div>
    <div id="pictures-container">
      <%= render partial: "pictures" %>
    </div>
  </div>
  <div class="buttons col-xs-12 col-sm-4 col-md-3">
    <div class="form-group" >
        <%= f.submit "Save changes", class: "btn btn-success"%>
    </div>
    <%= link_to "Back", shop_path(@shop), class: "btn btn-primary"%>

  </div>

<% end %>

