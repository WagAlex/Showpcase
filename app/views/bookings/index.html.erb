<% @bookings.each do |booking| %>
  <% shop = booking.shop %>
  <a href= <%= 'bookings/' + booking.id.to_s%>>
    <div class= "shop col-xs-12 col-sm-6 col-md-4">
      <div class="shop_picture_framework col-xs-12">
        <% if shop.pictures.size > 0 %>
          <%= image_tag shop.pictures.first.file.url(:medium), class: "shop_picture", alt: shop.name %>
        <% else %>
          <%= image_tag("http://1.bp.blogspot.com/-wpikixbnS64/Tgxd7mpRc4I/AAAAAAAABAk/XLRqNnyuS90/s1600/louis-vuitton-comme-des-garcons-pop-up-store-2.jpg", class: "shop_picture missing_picture", alt: shop.name) %>
        <% end %>
        </a>
      </div></a>
      <div class= "shop_info">
        <h3 class= "row"><%= shop.name %></h3>
        <div class= "col-xs-6">
          <p><%= shop.street_address %></p>
          <p><%= shop.city %></p>
          <p><%= shop.country %></p>
        </div>
        <div class="booking_price col-xs-4">
          <h3><%= number_to_currency(booking.price, precision: 0) %></h3>
          <p>Start date: <%= booking.start_date %></p>
          <p>End date: <%= booking.end_date %></p>
        </div>
      </div>
    </div>
  </a>
<% end %>